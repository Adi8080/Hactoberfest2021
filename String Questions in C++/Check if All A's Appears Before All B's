#include<bits/stdc++.h>
using namespace std;

class Solution {
public:
    bool checkString(string s) {
        for(int i=0;i<s.size()-1;i++)
        {
          if(s[i]=='b' && s[i+1]=='a')
          {
            return false;
          }
        }
        return true; 
    }
};



int main()
 {
    
        
        string s;
        cin>>s;
        Solution obj;
        cout<<obj.checkString(s)<<endl;
	
        return 0;
        
}  
